<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp" >

       <!--  <Button
            android:id="@+id/dishMinus5"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_btn_yellow"
            android:text="@string/minusFive" /> -->

        <Button
            android:id="@+id/dishMinus"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_btn_yellow"
            android:text="@string/minusOne" />

        <TextView
            android:id="@+id/dishQuantity"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="40dip" />

        <Button
            android:id="@+id/dishPlus"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_btn_blue"
            android:text="@string/plusOne" />

        <!-- <Button
            android:id="@+id/dishPlus5"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/selector_btn_blue"
            android:text="@string/plusFive" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/order"
        android:orientation="horizontal"
        android:paddingLeft="10dip" >

        <TextView
            android:id="@+id/dishName"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#4D2412"
            android:textSize="25dip" />

        <Button
            android:id="@+id/flavor"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selector_btn_blue"
            android:gravity="center"
            android:text="@string/flavor" />
        <TextView
            android:id="@+id/dishPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#4D2412"
            android:textSize="20dip" />
    </LinearLayout>

</RelativeLayout>