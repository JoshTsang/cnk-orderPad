<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
		<TextView android:id="@+id/dishName" 
	    	android:layout_width="200dip"
	   		android:layout_height="wrap_content"
	   		android:textSize="30dip"
	   		android:layout_marginLeft="15dip"
	   		android:textColor="#4D2412"/>
		<TextView android:id="@+id/salesCount" 
	    	android:layout_width="100dip"
	   		android:layout_height="wrap_content"
	   		android:textSize="30dip"
	   		android:gravity="right"
	   		android:textColor="#4D2412"/>
		<TextView android:id="@+id/totalAmount" 
	    	android:layout_width="140dip"
	   		android:layout_height="wrap_content"
	   		android:textSize="30dip"
	   		android:gravity="right"
	   		android:textColor="#4D2412"/>
		<TextView android:id="@+id/percentage" 
	    	android:layout_width="180dip"
	   		android:layout_height="wrap_content"
	   		android:textSize="30dip"
	   		android:gravity="right"
	   		android:textColor="#4D2412"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/details"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="30dp"
	    android:visibility="gone"
		android:descendantFocusability="blocksDescendants"
	    android:orientation="vertical">
	    <ListView android:id="@+id/detailList"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:clickable="false"
		    android:descendantFocusability="blocksDescendants">	        
	    </ListView>
	</LinearLayout>
</LinearLayout>