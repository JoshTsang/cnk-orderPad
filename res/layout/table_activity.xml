<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F8E9C1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/statistics_titlebar"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:background="#00000000"
            android:text="@string/back"
            android:textColor="#F9E8BB"
            android:textSize="35dip" />

        <Button
            android:id="@+id/checkOutTable"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:background="#00000000"
            android:text="@string/checkout"
            android:textColor="#F9E8BB"
            android:textSize="35dip" />

        <Button
            android:id="@+id/logout"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:background="#00000000"
            android:text="@string/logout"
            android:textColor="#F9E8BB"
            android:textSize="35dip" />

        <Button
            android:id="@+id/management"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:background="#00000000"
            android:text="@string/mangement"
            android:textColor="#F9E8BB"
            android:textSize="35dip" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_scr_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="4dip"
        android:gravity="center" >
    </LinearLayout>

</LinearLayout>
<LinearLayout android:layout_height="30dip"
        android:layout_width="wrap_content"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="200dp"
        android:layout_gravity="center|bottom" >
    <Button android:id="@+id/orderNotification"
        android:layout_height="30dip"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:background="#45000000"/>
</LinearLayout>
</FrameLayout>