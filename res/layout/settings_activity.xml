<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
     android:orientation="vertical"
     android:layout_width="fill_parent" 
     android:layout_height="fill_parent" 
     android:layout_weight="1.0" 
   	 android:background="#F8E9C1"
     > 
	<LinearLayout android:id="@+id/titlebar"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="@drawable/statistics_titlebar"
	    android:orientation="horizontal" >
		    <Button android:id="@+id/back"
		        android:layout_width="200dip"
		    	android:layout_height="40dip"
		    	android:textColor="#F9E8BB"
		    	android:textSize="35dip"
		    	android:text="@string/back"
		    	android:background="#00000000"/>
		    <Button
		        android:layout_width="200dip"
		    	android:layout_height="40dip"
		    	android:textColor="#F9E8BB"
		    	android:textSize="35dip"
		    	android:background="#00000000"/>
		    <Button
		        android:layout_width="200dip"
		    	android:layout_height="40dip"
		    	android:textColor="#F9E8BB"
		    	android:textSize="35dip"
		    	android:background="#00000000"/>
		    <Button 
		        android:layout_width="200dip"
		    	android:layout_height="40dip"
		    	android:textColor="#F9E8BB"
		    	android:textSize="35dip"
		    	android:background="#00000000"/>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="10dp"
	    android:paddingTop="10dp"
	    android:orientation="vertical" >
		<TextView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
    		android:textSize="30dip"
    		android:textColor="#4D2412"
		    android:text="人数："/>
	    <Switch android:id="@+id/persons"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textOn="开"
	        	android:textOff="关" 
	    />
	    <TextView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
    		android:textSize="30dip"
    		android:textColor="#4D2412"
		    android:text="提示音："/>
	    <Switch android:id="@+id/ringtone"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textOn="开"
	        	android:textOff="关" 
	    />
	    <TextView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
    		android:textSize="30dip"
    		android:textColor="#4D2412"
		    android:text="结账后清台："/>
	    <Switch android:id="@+id/cleanTableAfterCheckout"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textOn="开"
	        	android:textOff="关" 
	    />
	    <TextView android:id="@+id/pwdCheckTxt" 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
    		android:textSize="30dip"
    		android:textColor="#4D2412"
		    android:text="密码验证："/>
	    <Switch android:id="@+id/pwdCheck"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textOn="开"
	        	android:textOff="关" 
	    />
	</LinearLayout>
 
</LinearLayout>
